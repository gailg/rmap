

riskValidate = function(e, t, r, design = "randomSample", model, rSummary, bootstrap = FALSE,
                        rvpar = rvparFn()) {
  
  rv = riskValidateExternalFn(e, t, r, design, model, rSummary, bootstrap)

  force(rvpar)

  ocall = deparse(match.call())

  if("rvpar" %in% class(rvpar)) {

    if(rvpar$annotate) {
      annotatedAttributeDiagram(rv = rv, rvpar = rvpar, ocall = ocall)
    } else {
      attributeDiagram(rvs = rv, rvpar = rvpar, ocall = ocall)
    }
  } else {
    cat(paste("Note: No plot produced.  If an attribute diagram is desired, ",
                "rvparFn() should be used to set the argument 'rvpar'", sep = "\n"))
    cat("\n")
  }

  rv
}

